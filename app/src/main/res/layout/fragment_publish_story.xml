<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FragmentCourses">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"

                    android:layout_height="120dp"
                    android:background="@drawable/course_bg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/img" />

                        <TextView
                            android:id="@+id/course_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_toRightOf="@id/img"
                            android:text="Sheikh Zahir Abbas"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/buton_plan"
                            android:layout_width="90dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:layout_below="@id/course_name"
                            android:background="@drawable/btn_yellow"
                            android:gravity="center"
                            android:layout_toRightOf="@id/img"
                            android:layout_marginBottom="10dp"
                            android:text="Pro Plan"
                            android:textStyle="bold"
                            android:fontFamily="@font/productsansbold"
                            android:textSize="14sp"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/btnNotification"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/baseline_notifications_none_24"

                            />
                    </RelativeLayout>


                </RelativeLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="40dp"
                    app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
                    android:background="@drawable/search_bg"
                    android:drawableStart="@drawable/baseline_search_24"
                    android:paddingStart="10dp"
                    android:hint="Search course"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout"/>



            </androidx.constraintlayout.widget.ConstraintLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp">



                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/productsansbold"
                    android:textSize="19sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/imgAdd"
                    android:layout_width="379dp"
                    android:layout_below="@id/etUsername"
                    android:layout_marginTop="11dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="147dp"
                    android:src="@drawable/varification" />
                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="396dp"
                    android:layout_height="36dp"
                    android:layout_below="@id/imgAdd"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/productsansbold"
                    android:textSize="14sp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etDescription"
                    android:layout_centerHorizontal="true"
                    app:cornerRadius="8dp"
                    android:layout_marginTop="17dp"
                    android:backgroundTint="@color/Primary_color"
                    android:fontFamily="@font/productsansbold"
                    android:text="Submit Your Story"/>
            </RelativeLayout>

            <!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_marginTop="7dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:id="@+id/rv_courses"/>-->
        </LinearLayout>
    </FrameLayout>
</ScrollView>