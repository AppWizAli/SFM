<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="40dp"
    app:cardElevation="7dp"
    android:layout_marginVertical="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/buton_plan"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:paddingHorizontal="7dp"
            android:layout_below="@id/course_name"
            android:layout_gravity="end"
            android:layout_toRightOf="@id/img"
            android:background="@drawable/tv_bg"
            android:text="25-july-2024"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="11dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USDG BP Signal"
                android:textSize="20sp"
                android:fontFamily="@font/productsansbold"
                android:id="@+id/tvForexTittle"
                android:textColor="@color/black"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvImg"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="8dp"
                android:elevation="10dp"
                app:cardCornerRadius="12dp"
                android:layout_marginHorizontal="30dp"
                android:layout_below="@id/tvForexTittle"
                >
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:src="@drawable/varification"
                    android:layout_height="140dp" />

            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/tvForexDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvImg"
                android:layout_marginHorizontal="19dp"
                android:layout_marginTop="6dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/productsansbold"
                android:text="Open Position from 147 and \nBoom For 149"
                android:textSize="17sp" />


        </RelativeLayout>
        <ImageView
            android:id="@+id/zoomBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_saved_search_24"
            android:layout_gravity="end"
            android:padding="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>