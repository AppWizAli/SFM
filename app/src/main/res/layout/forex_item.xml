<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="40dp"
    app:cardElevation="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buton_plan"
            android:layout_width="140dp"
            android:layout_height="39dp"
            android:layout_below="@id/course_name"
            android:layout_gravity="end"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_toRightOf="@id/img"
            app:cornerRadius="9dp"
            android:backgroundTint="#FFC107"

            android:text="25-july-2024"

            android:textColor="@color/black" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USDG BP Signal"
                android:textSize="20sp"
                android:fontFamily="@font/productsansbold"
                android:id="@+id/name"
                android:textColor="@color/black"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/img"
                android:layout_below="@id/name"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:src="@drawable/varification"
                android:layout_centerHorizontal="true"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/tvForexDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img"
                android:layout_marginHorizontal="19dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/productsansbold"
                android:text="Open Position from 147 and\n Boom For 149"
                android:textSize="21sp" />


        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_saved_search_24"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>