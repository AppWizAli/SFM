<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.ActivitySignUp">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#185ED1">


        <ImageView
            android:id="@+id/brain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/logo_for_login_screen" />

        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/brain"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/productsansbold"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/brain"
            android:layout_marginStart="5dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/signup"
            android:maxLines="1"

            android:src="@drawable/flash" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/signup"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_bg"
            android:drawableStart="@drawable/baseline_email_24"
            android:hint="email"
            android:textSize="14sp"
            android:fontFamily="@font/productsansregular"
            android:drawablePadding="10dp"
            android:paddingStart="15dp"
            android:maxLines="1"
            android:textColorHint="@color/hint_color" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:maxLines="1"

            android:layout_below="@id/email"
            android:fontFamily="@font/productsansregular"

            android:textSize="14sp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_bg"
            android:drawableStart="@drawable/baseline_local_phone_24"
            android:hint="phone"
            android:paddingStart="15dp"
            android:drawablePadding="10dp"
            android:textColorHint="@color/hint_color" />

        <EditText
            android:id="@+id/pswrd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/phone"
            android:fontFamily="@font/productsansregular"
            android:maxLines="1"
            android:textSize="14sp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_bg"
            android:drawableStart="@drawable/baseline_password_24"
            android:hint="password"
            android:paddingStart="15dp"
            android:drawablePadding="10dp"
            android:textColorHint="@color/hint_color" />

        <TextView
            android:id="@+id/billing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pswrd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/productsansbold"
            android:text="Billing"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <RelativeLayout
            android:id="@+id/llBilling1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@id/billing"
            android:maxLines="1"

            >

            <EditText
                android:id="@+id/bn"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/edittext_bg"
                android:textSize="14sp"
                android:fontFamily="@font/productsansregular"
                android:drawableStart="@drawable/baseline_person_24"
                android:hint="Name"
                android:paddingStart="15dp"
                android:drawablePadding="5dp"
                android:textColorHint="@color/hint_color" />


            <EditText
                android:id="@+id/bcountry"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/baseline_outlined_flag_24"
                android:maxLines="1"
                android:hint="Country"
                android:paddingStart="15dp"
                android:textSize="14sp"
                android:fontFamily="@font/productsansregular"
                android:drawablePadding="5dp"
                android:textColorHint="@color/hint_color" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/llDistrict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llBilling1"
            android:layout_marginHorizontal="10dp"
            >

            <EditText
                android:id="@+id/district"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:maxLines="1"

                android:layout_marginVertical="10dp"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/baseline_flag_circle_24"
                android:hint="District"
                android:fontFamily="@font/productsansregular"

                android:paddingStart="15dp"
                android:drawablePadding="5dp"
                android:textColorHint="@color/hint_color" />

            <EditText
                android:id="@+id/city"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="10dp"
                android:maxLines="1"

                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/baseline_location_city_24"
                android:hint="City"
                android:paddingStart="15dp"
                android:textSize="14sp"
                android:fontFamily="@font/productsansregular"

                android:drawablePadding="5dp"
                android:textColorHint="@color/hint_color" />

        </RelativeLayout>

        <EditText
            android:id="@+id/postal"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_below="@id/llDistrict"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="10dp"
            android:maxLines="1"

            android:background="@drawable/edittext_bg"
            android:drawableStart="@drawable/baseline_airport_shuttle_24"
            android:hint="Postal Code"
            android:textSize="14sp"
            android:fontFamily="@font/productsansregular"
            android:paddingStart="15dp"
            android:drawablePadding="5dp"
            android:textColorHint="@color/hint_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rlStartPlan"
            android:layout_below="@+id/postal"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"

            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cv"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:backgroundTint="#F8F9FA"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/startup_plan_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Startup Plan"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/startup_plan_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="27dp"
                        android:text="1-Month"
                        android:textColor="@android:color/black"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/startup_plan_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/startup_plan_title"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="3dp"
                        android:text="200$"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/startup_plan_saving"
                        android:layout_width="99dp"
                        android:layout_height="32dp"
                        android:layout_below="@id/startup_plan_duration"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginHorizontal="20dp"
                        android:padding="4dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="7dp"
                        android:layout_marginBottom="0dp"
                        android:backgroundTint="@android:color/holo_orange_light"
                        android:text="Selected"
                        android:visibility="gone"
                        android:textColor="@android:color/black"
                        android:textSize="8sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/white"
                android:id="@+id/cv1"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/startup_plan_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="5dp"
                        android:text="Pro Plan"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/startup_plan_duration2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="27dp"
                        android:text="3-Month"
                        android:textColor="@android:color/black"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/startup_plan_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/startup_plan_title2"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="3dp"
                        android:text="350$"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/plan2"
                        android:layout_width="99dp"
                        android:layout_height="32dp"
                        android:layout_below="@id/startup_plan_duration2"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginHorizontal="20dp"
                        android:padding="4dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="7dp"
                        android:layout_marginBottom="0dp"
                        android:backgroundTint="@android:color/holo_orange_light"
                        android:text="Selected"
                        android:visibility="gone"
                        android:textColor="@android:color/black"
                        android:textSize="8sp" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>




        <TextView
            android:id="@+id/btnPayment"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@+id/rlStartPlan"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_bg"
            android:drawableStart="@drawable/baseline_fiber_manual_record_24"
            android:gravity="center"
            android:paddingStart="15dp"
            android:drawablePadding="10dp"
            android:paddingHorizontal="20dp"
            android:text="Choose Payment Method"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnPayment"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/productsansbold"
            android:text="Verification"
            android:textColor="@color/white"
            android:textSize="22sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rlTransaction"
            android:layout_below="@id/verification"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            >
            <EditText
                android:id="@+id/tid"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/baseline_person_24"
                android:hint="Transaction id"
                android:paddingStart="5dp"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/js"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/baseline_outlined_flag_24"
                android:paddingStart="5dp"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="Transaction screenshot"
                android:textColor="@color/white"
                android:textSize="10sp" />
            <ImageView
                android:layout_width="150dp"

                android:layout_height="50dp"
                android:id="@+id/jsimg"
                android:background="@drawable/edittext_bg"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                />


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rlIdCard"
            android:layout_below="@id/rlTransaction"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"

            >
            <TextView
                android:id="@+id/d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/baseline_flag_circle_24"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:paddingStart="5dp"
                android:text="Id Card Front Side"
                android:textColor="@color/white"
                android:paddingRight="5dp"
                android:textSize="12sp" />
            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/dimg"
                android:background="@drawable/edittext_bg"
                android:visibility="gone"

                android:layout_alignParentStart="true"

                />



            <TextView
                android:id="@+id/c"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/edittext_bg"
                android:paddingStart="5dp"
                android:drawableStart="@drawable/baseline_location_city_24"
                android:text="Back Side Of Id Card"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="12sp" />
            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/cimg"
                android:background="@drawable/edittext_bg"
                android:visibility="gone"

                android:layout_alignParentEnd="true"/>



        </RelativeLayout>


        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlIdCard"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="#07216D"
            android:text="Get In" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/ballite"
            android:text=" money is motivation"
            android:textColor="@color/white"
            android:textSize="29sp" />
    </RelativeLayout>

</ScrollView>