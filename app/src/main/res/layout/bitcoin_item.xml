<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="40dp"
    android:layout_marginTop="20dp"
    app:cardElevation="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buton_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:cornerRadius="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:layout_below="@id/course_name"
            android:layout_gravity="end"
            android:layout_toRightOf="@id/img"

            android:backgroundTint="#FEF100"

            android:text="25-july-2024"

            android:textColor="@color/black" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="8dp"
                android:layout_alignParentStart="true"
             android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:id="@+id/bitcoin_img"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC SIGNAL"
                android:textSize="20sp"
                android:id="@+id/tvTitle"
                android:fontFamily="@font/productsansbold"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/bitcoin_img"/>
<androidx.cardview.widget.CardView
    android:id="@+id/cardbitcoin_img"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_below="@id/bitcoin_img"
    app:cardCornerRadius="13dp"
    android:layout_margin="15dp"
    app:cardElevation="5dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bitcoin_img"
        android:id="@+id/img"
        />
</androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="buy form 66k and sell at 72k"
                android:layout_below="@id/cardbitcoin_img"
                android:id="@+id/tvDescription"
                android:textColor="@color/black"
        android:fontFamily="@font/productsansregular"
                android:layout_marginStart="25dp"
                android:maxLines="2"/>


        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:src="@drawable/baseline_saved_search_24"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>